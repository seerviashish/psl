{
  "name": "psl",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "commit": "git-cz",
    "dev": "yarn app:prebuild && yarn gql:watch && vite --port 3000",
    "build": "yarn app:prebuild && tsc && vite build",
    "postinstall": "yarn husky install && yarn app:prebuild && yarn server:prebuild",
    "pre-commit": "yarn lint:check",
    "eslint:check": "eslint \"*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"*.{js,jsx,ts,tsx}\" --fix",
    "gql:compile": "graphql-codegen",
    "gql:watch": "graphql-codegen -w",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write . --ignore-unknown",
    "lint:check": "yarn eslint:check && yarn prettier:check",
    "lint:fix": "yarn eslint:fix && yarn prettier:write",
    "lint-staged:check": "lint-staged",
    "preview": "vite preview",
    "app:prebuild": "mkver src/version.ts",
    "server:prebuild": "mkver server/version.ts",
    "server:build": "yarn server:prebuild && rimraf .server && tsc -p tsconfig.server.json",
    "server:start": "yarn server:prebuild && node .server/app.js start",
    "server:stop": "node .server/app.js stop",
    "server:dev": "yarn server:prebuild && rimraf .server && tsc-watch --noClear -p ./tsconfig.server.json --onSuccess \"node .server/app.js start --debug true\""
  },
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@apollo/server": "^4.11.2",
    "@apollo/utils.keyvadapter": "^4.0.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.12.0",
    "@fontsource/roboto": "^5.1.0",
    "@graphql-tools/schema": "^10.0.7",
    "@headlessui/react": "^2.2.0",
    "@keyv/redis": "^3.0.1",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.16.5",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "firebase": "^11.0.1",
    "firebase-admin": "^12.7.0",
    "google-auth-library": "^9.14.2",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^5.1.0",
    "moment": "^2.30.1",
    "mongodb": "^6.10.0",
    "mongoose": "^8.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-imask": "^7.6.0",
    "react-number-format": "^5.4.2",
    "react-router-dom": "^6.27.0",
    "react-social-login-buttons": "^4.1.0",
    "shelljs": "^0.8.5",
    "uuid": "^11.0.2",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "^4.5.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.6",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/shelljs": "^0.8.15",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.20",
    "chalk": "4.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "firebase-tools": "^13.23.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "mkver": "^3.0.2",
    "postcss": "^8.4.47",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "winston": "^3.15.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*": [
      "prettier --check --ignore-unknown"
    ]
  }
}
