{
  "name": "psl",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "commit": "git-cz",
    "dev": "yarn app:prebuild && vite",
    "build": "yarn app:prebuild && tsc && vite build",
    "postinstall": "yarn husky install && yarn app:prebuild && yarn server:prebuild",
    "pre-commit": "yarn lint:check",
    "eslint:check": "eslint \"*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"*.{js,jsx,ts,tsx}\" --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write . --ignore-unknown",
    "lint:check": "yarn eslint:check && yarn prettier:check",
    "lint:fix": "yarn eslint:fix && yarn prettier:write",
    "lint-staged:check": "lint-staged",
    "preview": "vite preview",
    "app:prebuild": "mkver src/version.ts",
    "server:prebuild": "mkver server/version.ts",
    "server:build": "yarn server:prebuild && rimraf .server && tsc -p tsconfig.server.json",
    "server:start": "yarn server:prebuild && node .server/app.js start",
    "server:stop": "node .server/app.js stop",
    "server:dev": "yarn server:prebuild && rimraf .server && tsc-watch --noClear -p ./tsconfig.server.json --onSuccess \"node .server/app.js start --debug true\""
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/server": "^4.9.5",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@graphql-tools/schema": "^10.0.2",
    "@headlessui/react": "^1.7.17",
    "@mui/icons-material": "^5.15.4",
    "@mui/material": "^5.15.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-social-login-buttons": "^3.9.1",
    "shelljs": "^0.8.5",
    "uuid": "^9.0.1",
    "ws": "^8.15.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/shelljs": "^0.8.15",
    "@types/uuid": "^9.0.7",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "chalk": "4.1.2",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mkver": "^2.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "winston": "^3.11.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*": [
      "prettier --check --ignore-unknown"
    ]
  }
}
