{
  "name": "psl",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "commit": "git-cz",
    "dev": "yarn app:prebuild && yarn gql:watch && vite --port 3000",
    "build": "yarn app:prebuild && tsc && vite build",
    "postinstall": "yarn husky install && yarn app:prebuild && yarn server:prebuild",
    "pre-commit": "yarn lint:check",
    "eslint:check": "eslint \"*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"*.{js,jsx,ts,tsx}\" --fix",
    "gql:compile": "graphql-codegen",
    "gql:watch": "graphql-codegen -w",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write . --ignore-unknown",
    "lint:check": "yarn eslint:check && yarn prettier:check",
    "lint:fix": "yarn eslint:fix && yarn prettier:write",
    "lint-staged:check": "lint-staged",
    "preview": "vite preview",
    "app:prebuild": "mkver src/version.ts",
    "server:prebuild": "mkver server/version.ts",
    "server:build": "yarn server:prebuild && rimraf .server && tsc -p tsconfig.server.json",
    "server:start": "yarn server:prebuild && node .server/app.js start",
    "server:stop": "node .server/app.js stop",
    "server:dev": "yarn server:prebuild && rimraf .server && tsc-watch --noClear -p ./tsconfig.server.json --onSuccess \"node .server/app.js start --debug true\""
  },
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "@apollo/server": "^5.0.0",
    "@apollo/utils.keyvadapter": "^4.0.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.8",
    "@graphql-tools/schema": "^10.0.25",
    "@headlessui/react": "^2.2.9",
    "@keyv/redis": "^5.1.3",
    "@mui/icons-material": "^5.18.0",
    "@mui/material": "^5.18.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.4.1",
    "graphql": "^16.11.0",
    "graphql-ws": "^6.0.6",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^5.5.3",
    "moment": "^2.30.1",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-imask": "^7.6.0",
    "react-number-format": "^5.4.4",
    "react-router-dom": "^7.9.4",
    "react-social-login-buttons": "^4.1.1",
    "shelljs": "^0.10.0",
    "uuid": "^13.0.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/client-preset": "^5.1.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/shelljs": "^0.8.17",
    "@types/uuid": "^11.0.0",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "autoprefixer": "^10.4.21",
    "chalk": "4.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "firebase-tools": "^14.21.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mkver": "^4.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.12",
    "winston": "^3.18.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*": [
      "prettier --check --ignore-unknown"
    ]
  }
}
